rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow access to RAG pipeline collections
    match /documentChunks/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    match /pdfCache/{cacheId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow access to all documents for development/testing
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
