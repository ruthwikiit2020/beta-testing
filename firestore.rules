rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow access to RAG pipeline collections
    match /documentChunks/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    match /pdfCache/{cacheId} {
      allow read, write: if request.auth != null;
    }
    
    // Payment records - Admin only (read-only for development)
    match /payments/{paymentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Users can create payment records
    }
    
    // Plan-specific customer lists - Admin only
    match /plans/{planId}/customers/{customerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Users can add themselves
    }
    
    // Allow access to all documents for development/testing
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
